<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_friends_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.gandh.inclass09a.Friends_activity">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:focusableInTouchMode="true"
        android:ems="10"
        android:hint="Search user by email or name"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView4_f" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search"
        android:id="@+id/imageView_f"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editText_email"
        android:layout_toEndOf="@+id/editText_email"
        android:layout_above="@+id/textView3_f" />

    <TextView
        android:text="All Users"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4_f"
        android:layout_width="127dp" />

    <TextView
        android:text="Friends"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:id="@+id/textView5_f"
        android:layout_alignBaseline="@+id/textView4_f"
        android:layout_alignBottom="@+id/textView4_f"
        android:layout_toRightOf="@+id/textView4_f"
        android:layout_width="127dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4_f"
        android:layout_centerHorizontal="true"
        android:id="@+id/rv1_f" />

    <TextView
        android:id="@+id/textView3_f"
        android:layout_width="127dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tool_bar"
        android:layout_toRightOf="@+id/textView5_f"
        android:text="Requests"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>
